---
// src/pages/contact-us/index.astro (dengan peta yang sudah diperbarui )

import Layout from "@layouts/Layout.astro";
import InnerHero from "@components/sections/InnerHero.astro";

const heroContent = {
    title: "Hubungi Kami",
    description: "Kami siap membantu mewujudkan rencana bisnis Anda. Silakan hubungi kami melalui detail kontak di bawah ini atau kunjungi langsung kantor kami.",
};
---

<Layout title="Hubungi Kami" description="Halaman kontak PT Jaya Konsultan Bisnis. Hubungi kami untuk layanan studi kelayakan, business plan, dan riset pasar.">
    
    <InnerHero content={heroContent} />

    <section class="py-large">
        <div class="site-container px-4">
            
            <div class="max-w-4xl mx-auto space-y-12">

                <!-- Bagian Informasi Kontak -->
                <div>
                    <h2 class="text-3xl font-semibold mb-6 text-center">Informasi Kontak</h2>
                    <div class="bg-white/5 p-8 rounded-lg shadow-lg border border-white/10">
                        <ul class="space-y-4 text-body-base text-lg">
                            <li class="flex flex-col sm:flex-row">
                                <strong class="w-28 shrink-0">Alamat:</strong>
                                <span>Jl. H Taha No 2K Kelapa Dua Kebon Jeruk, Jakarta Barat</span>
                            </li>
                            <li class="flex items-center">
                                <strong class="w-28 shrink-0">Email:</strong>
                                <a href="mailto:info@jayakonsultanbisnis.com" class="hover:text-primary transition-colors">info@jayakonsultanbisnis.com</a>
                            </li>
                            <li class="flex items-center">
                                <strong class="w-28 shrink-0">Telepon:</strong>
                                <a href="tel:+6281274203815" class="hover:text-primary transition-colors">0812-7420-3815</a>
                            </li>
                             <li class="flex items-center">
                                <strong class="w-28 shrink-0">WhatsApp:</strong>
                                <a href="https://wa.me/6281274203815?text=Halo%20Jakobi%2C%20saya%20tertarik%20dengan%20jasa%20Anda." target="_blank" class="hover:text-primary transition-colors">0812-7420-3815 (Klik untuk chat )</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Bagian Peta Lokasi -->
                <div>
                    <h2 class="text-3xl font-semibold mb-6 text-center">Lokasi Kantor Kami</h2>
                    <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden shadow-lg border border-white/10">
                        
                        {/* --- PETA ANDA SUDAH DI-EMBED DI SINI --- */}
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d991.6126579579419!2d106.76810246961068!3d-6.204133599611466!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e69f7272ef24689%3A0x8de398a464a8488!2sSoto%20Tangkar%20mas%20Pradi%20Jl.%20H.Taha!5e0!3m2!1sid!2sid!4v1762121362892!5m2!1sid!2sid" 
                            width="100%" 
                            height="100%" 
                            style="border:0;" 
                            allowfullscreen="" 
                            loading="lazy" 
                            referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                        
                    </div>
                </div>

            </div>
        </div>
    </section>
</Layout>
