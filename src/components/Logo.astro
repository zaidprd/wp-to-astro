---
// BAGIAN INI SUDAH BENAR DAN TIDAK PERLU DIUBAH
import { Image } from 'astro:assets';
import logo from '../assets/logo-jakobi.webp';
interface Props {
    variant?: 'header' | 'footer' | 'dark';
}

const { variant = 'header' } = Astro.props;

// FUNGSI INI PENTING DAN TETAP DIGUNAKAN
const getLogoClass = () => {
    switch (variant) {
        case 'header':
            // Anda bisa menyesuaikan ukuran di sini, misal 'h-10'
            return 'h-16'; 
        case 'footer':
            // Mungkin di footer logonya lebih besar, misal 'h-12'
            return 'h-12';
        case 'dark':
            // Mungkin ukurannya sama dengan header
            return 'h-10';
        default:
            return 'h-10';
    }
};
---

<!-- CUKUP GANTI BAGIAN HTML DI BAWAH INI -->

<a href="/" aria-label="Jakobi - Kembali ke Beranda" class="block transition-opacity duration-300 hover:opacity-80">
    <Image 
        src={logo} 
        alt="Logo Jakobi"
        class:list={[
            "w-auto", // Lebar otomatis agar tidak gepeng
            getLogoClass() // Terapkan kelas tinggi dinamis dari fungsi switch
        ]}
    />
</a>
