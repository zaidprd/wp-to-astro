---
// src/components/sections/Features.astro
import type { Feature } from '@data/features';
import Button from '@components/ui/Button.astro';
import Eyebrow from '@components/ui/Eyebrow.astro';
import { getPaddingClass, getBackgroundColor, getTextColor } from '@utils/styleUtils';
import type { PaddingSize, ThemeColor } from '@utils/styleUtils';

export interface Props {
    content: {
        eyebrow?: string;
        title?: string;
        description?: string | string[]; 
        button?: {
            text: string;
            link: string;
            variant?: 'primary' | 'secondary' | 'ghostLight' | 'ghostDark';
        };
        features: Feature[];
    };
    background?: ThemeColor;
    padding?: PaddingSize;
    paddingTop?: PaddingSize;
    paddingBottom?: PaddingSize;
}

const {
    content: {
        eyebrow,
        title,
        description, 
        button,
        features
    },
    background = 'base'
} = Astro.props;

const descriptionArray = Array.isArray(description) 
    ? description 
    : (description ? [description] : []);

const bgColor = getBackgroundColor(background);
const textColor = getTextColor(background);
const paddingClass = getPaddingClass({ 
    padding: Astro.props.padding,
    paddingTop: Astro.props.paddingTop,
    paddingBottom: Astro.props.paddingBottom 
});
---

<section class:list={["relative", bgColor, paddingClass]}>
    <div class="site-container px-4">
        {(title || descriptionArray.length > 0) && ( 
            <div class="text-center mb-16 max-w-3xl mx-auto">
                {eyebrow && <Eyebrow text={eyebrow} background={background} />}
                {title && <h2 class:list={[textColor]} data-aos="fade-up">{title}</h2>}
                {descriptionArray.length > 0 && (
                    <div class:list={["mt-4", textColor, "opacity-90"]} data-aos="fade-up" data-aos-delay="100">
                        {descriptionArray.map((paragraph) => (
                            <p class="mb-4 last:mb-0">{paragraph}</p>
                        ))}
                    </div>
                )}
                {button && (
                    <div class="mt-8" data-aos="fade-up" data-aos-delay="200">
                        <Button href={button.link} variant={button.variant || 'primary'}>{button.text}</Button>
                    </div>
                )}
            </div>
        )}

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-auto-fit gap-8 auto-rows-fr">
            {features.map((feature, index) => (
                <div 
                    class:list={[
                        "p-6 rounded-lg border",
                        // Menggunakan warna border yang sesuai dengan background
                        background === 'dark' ? 'border-white/20' : 'border-black/10',
                        background === 'dark' ? 'bg-white/5' : 'bg-white/50',
                        "flex flex-col"
                    ]}
                    data-aos="fade-up"
                    data-aos-delay={index * 100}
                >
                    {/* --- ðŸ‘‡ BLOK PERUBAHAN UTAMA ADA DI SINI ðŸ‘‡ --- */}
                    <div class:list={[
                        "w-12 h-12 flex items-center justify-center rounded-lg mb-4",
                        // Jika background gelap, buat lingkaran transparan. Jika tidak, gunakan warna primer.
                        background === 'dark' ? 'bg-white/10' : 'bg-primary'
                    ]}>
                        <feature.icon
                            size={24}
                            // Jika background gelap, buat ikon putih. Jika tidak, gunakan warna primer atau putih tergantung bg ikon.
                            class:list={[
                                background === 'dark' ? 'text-white' : 'text-white'
                            ]}
                        />
                    </div>
                    {/* --- AKHIR BLOK PERUBAHAN --- */}

                    <h3 class:list={["text-h4 mb-2", textColor]}>
                        {feature.title}
                    </h3>
                    <p class:list={["text-base", textColor, "opacity-90"]}>
                        {feature.description}
                    </p>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .grid-cols-auto-fit {
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }
</style>
